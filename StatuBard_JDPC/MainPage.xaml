<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StatuBard_JDPC.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="General" TargetType="Button">
                <Setter Property="CornerRadius" Value="15"></Setter>
                <Setter Property="FontAttributes" Value="Bold"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout VerticalOptions="FillAndExpand" Padding="20, 100, 20, 0"
                 BackgroundColor="Tomato" >
        <Label Text="StatusBar" FontSize="50"></Label>
        <Button Text="Transparente" Command="{Binding TransparenteCommand}" 
                Style="{StaticResource General}" Background="red"></Button>
        <Button Text="Ocultar" Command="{Binding OcultarCommand}" 
         Style="{StaticResource General}" Background="red"></Button>
        <Button Text="Mostrar" Command="{Binding MostrarCommand}" 
         Style="{StaticResource General}" Background="red"></Button>
        <Button Text="Traslucido" Command="{Binding TraslucidoCommand}" 
         Style="{StaticResource General}" Background="red"></Button>
        <Button Text="CambiarColor" Command="{Binding CambiarColorCommand}" 
         Style="{StaticResource General}" Background="red"></Button>
    </StackLayout>

</ContentPage>
